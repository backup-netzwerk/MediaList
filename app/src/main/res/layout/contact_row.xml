<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="#1C6962"
        app:cardCornerRadius="@dimen/elevation"
        app:cardElevation="@dimen/elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/media_icon_img_btn"
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="5dp" />

                <TextView
                    android:id="@+id/row_media_type_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/general_padding"
                    android:text="TextView"
                    android:textColor="#1CF499"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/row_occupation_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#AFBDC3"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#AFBDC3"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingEnd="7dp"
                    android:text="Recebido em:" />
                <TextView
                    android:id="@+id/row_delivery_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#AFBDC3"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:layout_marginEnd="40dp"
                    android:text="24/11/2022 Ã s 13:40" />
                <Button
                    android:id="@+id/media_card_cta_btn"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="50dp"
                    android:background="@drawable/newuimain"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="0dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:translationY="-15dp"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="abrir"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>